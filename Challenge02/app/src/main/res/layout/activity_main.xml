<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.palmdigital.challenge02.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Picture" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:layout_marginHorizontal="100dp"
        app:srcCompat="@drawable/rightarrow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Middle Picture"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="74dp"
        android:layout_marginHorizontal="100dp"
        app:srcCompat="@drawable/stop_sign_round_red" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Middle Picture"
        />

    <ImageView
        android:layout_width="103dp"
        android:layout_height="78dp"
        android:layout_marginHorizontal="100dp"
        app:srcCompat="@drawable/android" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Picture"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="74dp"
        android:layout_marginHorizontal="100dp"
        app:srcCompat="@drawable/leftarrow"
        />

</LinearLayout>
