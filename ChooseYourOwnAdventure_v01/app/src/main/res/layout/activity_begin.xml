<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.chooseyourownadventure_v01.BeginActivity">

    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Choose Your Own Adventure"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_story_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="One morning, the Tortoise woke up in a dream."
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Would you like to 'wake up' or 'explore' the dream?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tortoise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tortoise"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_wake"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"
            android:text="Wake Up"
            />

        <Button
            android:id="@+id/button_explore"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:text="Explore" />
    </LinearLayout>

</LinearLayout>
